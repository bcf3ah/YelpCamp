<% include ../partials/header %>

<div class="container">
    <div class="row">
        <h1 class="text-center">Edit <%= campground.name %></h1>
        <div style="width: 30%; margin:25px auto;">
            <form action="/campgrounds/<%= campground._id %>?_method=PUT" method="post">
                <div class="form-group">
                    <input class="form-control" type="text" value="<%= campground.name %>" name="campground[name]">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" value="<%= campground.image %>" name="campground[image]">
                </div>
                <div class="form-group">
                    <input class="form-control" type="number" value="<%= campground.price %>" name="campground[price]" min="0.00" step="0.01">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" value="<%= campground.address %>" name="campground[address]">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" value="<%= campground.cityState %>" name="campground[cityState]">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" value="<%= campground.zip %>" name="campground[zip]">
                </div>
                <div class="form-group">
                    <textarea class="form-control" name="campground[description]"><%= campground.description %></textarea>
                </div>
                <div class="form-group">
                    <button class="btn btn-large btn-primary btn-block">Update</button>
                </div>
            </form>
            <a href="/campgrounds">Go back</a>
        </div>
    </div>
</div>

<% include ../partials/footer %>
