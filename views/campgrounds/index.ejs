<% include ../partials/header %>


<div class="container">
    <header class="jumbotron">
        <div class="container">
            <div class="indexHeader">
                <h1>Welcome to YelpCamp</h1>
                <p>The Ultimate Campground Directory</p>
                <p>
                   <a href="/campgrounds/new"><button class="btn btn-primary btn-large">Add new campground</button></a>
                </p>
            </div>
        </div>
    </header>

    <div class="row">
        <div class="col-lg-12">
            <h3 class="text-center">The creme of the crop</h3>
            <hr>
        </div>
    </div>

       <div class="row text-center" style="display: flex; flex-wrap: wrap;">
         <% campgrounds.forEach(function(site){ %>
           <div class="col-md-3 col-sm-6">
               <a href="/campgrounds/<%= site._id %>">
                   <div class="thumbnail index">
                        <img class="pic" src="<%= site.image %>">
                        <div class="caption">
                          <h5 class="title"><%= site.name %></h5>
                        </div>
                        <p><a href="/campgrounds/<%= site._id %>" class="btn btn-primary">More Info</a></p>
                   </div>
               </a>
           </div>
         <% }); %>
    </div>

</div>






<% include ../partials/footer %>
